<h1>Kudos</h1>

<table class="table table-striped table-hover">
  <thead class="table-secondary">
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Giver</th>
      <th>Receiver</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kudos.each do |kudo| %>
      <tr>
        <td><%= kudo.title %></td>
        <td><%= kudo.content %></td>
        <td><%= kudo.giver_of_kudo.email %></td>
        <td><%= kudo.receiver_of_kudo.email %></td>
        <% if kudo.giver_of_kudo == current_employee %>
        <td><%= link_to 'Show', kudo, class: 'btn btn-outline-primary btn-sm' %> <%= link_to 'Edit', edit_kudo_path(kudo), class: 'btn btn-outline-primary btn-sm' %> <%= link_to 'Destroy', kudo, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %></td>
        <% else %>
        <td><%= link_to 'Show', kudo, class: 'btn btn-outline-primary btn-sm' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Kudo', new_kudo_path, class: 'btn btn-success float-right' %>