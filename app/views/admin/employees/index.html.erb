<h2> Add number of available kudos to all employees</h2>
<br/>

<%= form_with url: admin_employee_add_kudos_for_all_path(@employees), method: :patch do |f| %>
  <%= f.number_field :amount, in: 1..20, value: 1 %>
  <%= f.submit "Add points" %>
<% end %>
<br/>

<table class="table table-striped table-hover">
  <thead class="table-secondary">
    <tr>
      <th>Employees</th>
      <th>Points</th>
      <th>Number of Available Kudos</th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr data-user-email="<%= employee.email %>">
        <% if employee.first_name.nil? || employee.last_name.nil? %>
          <td><%= employee.email %></td>
        <% else %>
          <td><%= employee.first_name + " " + employee.last_name %></td>
        <% end %>
        <td><%= employee.points %></td>
        <td><%= employee.number_of_available_kudos %></td>
        <td><%= link_to 'Edit', edit_admin_employee_path(employee), class: 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Destroy', admin_employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
