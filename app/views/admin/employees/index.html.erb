<h2> Add number of available kudos to all employees</h2>
<br/>

<%= form_for :employee, url: admin_employee_add_kudos_for_all_path(@employees), method: :patch do |f| %>
  <%= f.number_field :amount, in: 1..20, value: 1 %>
  <%= f.submit "Add points" %>
<% end %>
<br/>

<table class="table table-striped table-hover">
  <thead class="table-secondary">
    <tr>
      <th>Employees</th>
      <th>Points</th>
      <th>Number of Available Kudos</th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr data-user-email="<%= employee.email %>">
        <td><%= employee.email %></td>
        <td><%= employee.points %></td>
        <td><%= employee.number_of_available_kudos %></td>
      </tr>
    <% end %>
  </tbody>
</table>
