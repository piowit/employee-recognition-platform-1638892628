<h1>Manage Kudos</h1>

<table class="table table-striped table-hover">
  <thead class="table-secondary">
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Giver</th>
      <th>Receiver</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kudos.each do |kudo| %>
      <tr>
        <td><%= kudo.title %></td>
        <td><%= kudo.content %></td>
        <% if kudo.giver.first_name.nil? || kudo.giver.last_name.nil? %>
          <td><%= kudo.giver.email %></td>
        <% else %>
          <td><%= kudo.giver.first_name + " " + kudo.giver.last_name %></td>
        <% end %>
        <% if kudo.receiver.first_name.nil? || kudo.receiver.last_name.nil? %>
          <td><%= kudo.receiver.email %></td>
        <% else %>
          <td><%= kudo.receiver.first_name + " " + kudo.receiver.last_name %></td>
        <% end %>
        <td><%= kudo.company_value.title %></td>
        <td><%= link_to 'Show', admin_kudo_path(kudo), class: 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_admin_kudo_path(kudo), class: 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Destroy', admin_kudo_path(kudo), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Kudo', new_admin_kudo_path, class: 'btn btn-success' %>
