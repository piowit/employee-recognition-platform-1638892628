<h1>All Orders:</h1>

<div data-controller="employeeOrders">
  <table class="table table-striped table-hover">
    <thead class="table-secondary">
      <tr>
        <th>Purchuase time</th>
        <th>Placed by</th>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th>Delivered</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime("%d-%m-%y %H:%M") %></td>
          <td><%= order.employee.email %></td>
          <td><%= order.reward_snapshot.title %></td>
          <td><%= order.reward_snapshot.description %></td>
          <td><%= order.reward_snapshot.price %></td>
          <% if order.delivered %>
            <td>Delivered</td>
          <% else %>
            <td>Not yet <%= link_to 'Deliver', deliver_admin_order_path(order), data: { confirm: 'Are you sure? It cannot be undone.' }, class: 'btn btn-outline-danger btn-sm' %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
