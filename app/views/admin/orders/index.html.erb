<h1>All Orders:</h1>

<%= form_with(model: @order) do |form| %>
<div class="field">
    <%= form.label 'Employee: ', class: 'form-label' %>
    <%= collection_select( :order, :employee_id, Employee.all, :id, :email, { prompt: 'Select an employee' }, { class: 'form-select', data: {action: 'change->country#change'} }) %>
  </div>
  <br/>
  <div class="actions">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %> 

<div data-controller="employeeOrders">
  <table class="table table-striped table-hover">
    <thead class="table-secondary">
      <tr>
        <th>Purchuase time</th>
        <th>Placed by</th>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime("%d-%m-%y %H:%M") %></td>
          <td><%= order.employee.email %></td>
          <td><%= order.reward_snapshot.title %></td>
          <td><%= order.reward_snapshot.description %></td>
          <td><%= order.reward_snapshot.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
