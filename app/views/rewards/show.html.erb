<div class="d-flex w-50 ">
  <div class="container p-2">
    <div class="card-deck mb-3 text-center">
      <div class="card mb-4 shadow-sm">
        <div class="card-header">
          <h4 class="my-0 font-weight-normal">Reward details</h4>
        </div>
        <div class="card-body">
          <ul class="list-unstyled mt-3 mb-4">
            <li><h4>Title: <%= @reward.title %></h4></li>
            <li>Description: <%= @reward.description %></li>
            <li>Price: <%= @reward.price %></li>
            <li>Categories:</li>
            <ul>
              <% @reward.categories.each do |category| %>
              <li><%= category.title %></li>
              <% end %>
            </ul>
          </ul>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-end">
      <%= link_to "Buy", orders_path(reward: @reward,), method: :post, class: "btn btn-success" %>
      <%= link_to 'Back', rewards_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
